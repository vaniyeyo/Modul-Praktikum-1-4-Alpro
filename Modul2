#include <stdio.h>
int main(){
//Inisialisasi Variabel
  int deret, bil, bil1=1, bil2=0;
//Judul program
  printf("Deret Bilangan Fibonacci\n");
//Inputan user banyaknya deret yang diinginkan
  printf("Masukkan banyak deret: ");
  scanf("%d",&deret);
//Proses untuk menampilkan bilangan Fibonacci sebanyak yang user inginkan
  if(deret!=0){
  for(int i=0;i<deret;i++){
//Untuk nilai bilangan Fibonacci posisi awal
  if(i==0){
  bil=bil2;
  }else if(i==1){
  bil=bil1;
  }else if(i>1){
  bil=bil1+bil2;
//Memberikan nilai baru pada bil1 dan bil2
  bil2=bil1;
  bil1=bil;
//Mengatur tampilan deret bilangan Fibonacci
  }if(i==(deret==0)){14
  printf("%d, ",bil);
  }else{
printf("%d, ",bil1);
      }  
    }
  }
}
